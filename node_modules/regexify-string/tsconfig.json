{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "./",
        "jsx": "react",
        "baseUrl": "./",
        "lib": [
            "es5",
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/__tests__/*",
        "node_modules",
        "jest.config.js"
    ]
}